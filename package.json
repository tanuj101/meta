{
	"name": "meta",
	"description": "My portfolio is my small personal slice of the Internet.",
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"prepare": "husky",
		"lint": "biome lint --write .",
		"lint:fix": "biome check --write .",
		"check": "astro check",
		"dev": "astro dev --host",
		"build": "astro build && pnpm print",
		"preview": "astro preview --host --port 4322",
		"astro": "astro",
		"print": "npx puppeteer browsers install chrome && start-server-and-test preview http://localhost:4322/ 'tsx src/scripts/print.ts'"
	},
	"dependencies": {
		"@astrojs/alpinejs": "^0.4.1",
		"@astrojs/check": "^0.9.4",
		"@astrojs/mdx": "^4.0.4",
		"@astrojs/rss": "^4.0.11",
		"@astrojs/sitemap": "^3.3.0",
		"@astrojs/tailwind": "^5.1.4",
		"@fontsource/inter": "^5.2.5",
		"@iconify-json/lucide": "^1.2.22",
		"@iconify-json/simple-icons": "^1.2.19",
		"@recivi/schema": "^0.0.1",
		"@types/alpinejs": "^3.13.11",
		"@types/node": "^22.10.1",
		"@vercel/og": "^0.6.4",
		"alpinejs": "^3.14.7",
		"astro": "^5.1.4",
		"chalk": "^5.3.0",
		"country-flag-icons": "^1.5.18",
		"puppeteer": "^23.11.1",
		"satori-html": "^0.3.2",
		"start-server-and-test": "^2.0.9",
		"tailwindcss": "^3.4.16",
		"tailwindcss-safe-area": "^0.6.0",
		"tsx": "^4.19.2"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"globals": "^15.13.0",
		"husky": "^9.1.7",
		"lint-staged": "^15.2.10",
		"nodemon": "^3.1.9",
		"typescript": "^5.7.2"
	},
	"packageManager": "pnpm@9.15.0",
	"pnpm": {
		"patchedDependencies": {
			"@vercel/og@0.6.5": "patches/@vercel__og@0.6.5.patch"
		}
	}
}
